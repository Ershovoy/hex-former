<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:UserControls="clr-namespace:View.UserControls"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="HEX Former" Height="480" Width="640"
                           MinHeight="480" MinWidth="640">
    <Grid Margin="8,0,8,8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Make HEX" Grid.Column="0" Margin="0,0,4,0">
            <UserControls:PackagePatternContainer/>
        </GroupBox>
        <GroupBox Header="Parse HEX" Grid.Column="1" Margin="4,0,0,0">
            <UserControls:PackagePatternContainer/>
        </GroupBox>
    </Grid>
</Window>