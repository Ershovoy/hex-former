<UserControl x:Class="View.UserControls.PackagePatternContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:UserControls="clr-namespace:View.UserControls"
             xmlns:local="clr-namespace:View.UserControls"
             mc:Ignorable="d">
    <Grid>
        <DockPanel>
            <UserControls:PackagePatternControlPanel DockPanel.Dock="Bottom"/>
            <UserControls:PackagePattern DockPanel.Dock="Top"
                                         Padding="31,0,0,0"/>
        </DockPanel>
    </Grid>
</UserControl>